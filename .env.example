# Periskope Webhook Configuration
PERISKOPE_SIGNING_SECRET=your_signing_secret_here

# Periskope API Configuration (for chat name enrichment)
PERISKOPE_API_KEY=your_bearer_token_here
PERISKOPE_ORG_PHONE=

# Elasticsearch Configuration
ELASTICSEARCH_HOST=
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your_password_here
ELASTICSEARCH_INDEX=whatsapp_message_webhook
ELASTICSEARCH_CACHE_INDEX=whatsapp_chat_names

# Optional: Pre-populate cache on startup (true/false)
# Set to true to fetch and cache all group names when server starts
CACHE_ON_STARTUP=false
